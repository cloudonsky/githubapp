<p id="notice"><%= notice %></p>

<h1>Blas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blas.each do |bla| %>
      <tr>
        <td><%= bla.name %></td>
        <td><%= link_to 'Show', bla %></td>
        <td><%= link_to 'Edit', edit_bla_path(bla) %></td>
        <td><%= link_to 'Destroy', bla, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bla', new_bla_path %>
